<div class="clearfix">
  <%= render 'shared/sidebar' %>
  <main class="float-right w-5/6 ">
    <p class="font-semibold mb-6">Contacts found with <span class="tag-button rounded duration-300 font-normal"><%= @tag.name %></span></p>
    <section>
      <% @contacts.each do |c| %>
        <%= link_to contact_path(slug: c.slug) do %>
          <div class="flex items-center hover:bg-blue-100 p-2 rounded duration-300">
            <% if c.avatar.present? %>
              <%= image_tag(c.avatar, class: "rounded-full w-24 h-24") %>
            <% else %>
              <svg id="avatar-placeholder" fill="none" viewBox="0 0 24 24" stroke="#fafafa" class="p-4 rounded-full inline-block align-middle user w-24 h-24 bg-gray-400"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
            <% end %>
            <div class="flex-1 pl-4">
              <div><%= c.first_name %> <%= c.last_name %></div>
              <div><%= c.city %>, <%= c.state %>, <%= c.country %></div>
            </div>
          </div>
        <% end %>
        <hr class="my-4">
      <% end %>
    </section>
  </main>
</div>
