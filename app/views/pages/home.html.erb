<div class="clearfix">
  <%= render 'shared/sidebar' %>
  <main class="float-right w-5/6 ">
    <p class="font-semibold mb-6">Your Contacts</p>
    <table class="table-fixed w-full">
      <thead>
        <tr>
          <th class="w-1/3 pb-2 text-left text-xs">Name</th>
          <th class="w-1/3 pb-2 text-left text-xs">Last contacted</th>
          <th class="w-1/3 pb-2 text-left text-xs">Location</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |c| %>
          <tr class="border-t-2 border-b-2">
            <td class=" px-4 py-2">
              <%= link_to contact_path(slug: c.slug), class: 'hover:text-blue-500' do %>
                <% if c.avatar.present? %>
                  <%= image_tag(c.avatar, class: "rounded-full w-6 h-6 inline-block align-middle") %>  <span class="inline-block align-middle"><%= c.first_name %> <%= c.last_name %></span>
                <% else %>
                  <svg id="avatar-placeholder" fill="none" viewBox="0 0 24 24" stroke="#fafafa" class="p-1 rounded-full inline-block align-middle user w-6 h-6 bg-gray-400"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg> <span class="inline-block align-middle"><%= c.first_name %> <%= c.last_name %></span>
                <% end %>
              <% end %>
              </td>
            <td class=" px-4 py-2">-</td>
            <td class="text-sm px-4 py-2"><%= c.city %>, <%= c.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="my-4 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  </main>
</div>

